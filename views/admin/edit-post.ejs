<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>

</div>


<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

        <label for="title"><b>Title</b></label>
        <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

        <label for="body"><b>Content</b></label>
        <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

   <div id="media-update-box">
    <div class="form-group">
        <label for="post-image">Images:</label>
        <input type="file" id="post-image" name="images" accept="image/*" multiple>
        <div id="image-preview"></div>
    </div>

    <div class="form-group">
        <label for="post-video">Video:</label>
        <input type="file" id="post-video" name="video" accept="video/*">
        <div id="video-preview"></div>
    </div>

    <div class="form-group">
        <label for="post-audio">Audio:</label>
        <input type="file" id="post-audio" name="audio" accept="audio/*">
        <div id="audio-preview"></div>
    </div>
  </div>

    <input type="submit" value="Update" class="button">
</form>